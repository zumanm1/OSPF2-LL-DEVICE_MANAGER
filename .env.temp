# ================================================================================
# NetMan OSPF Device Manager - Environment Configuration Template
# ================================================================================
# IMPORTANT: Copy this file to .env.local and update with your credentials
#            DO NOT commit .env.local to version control!
#
# Command: cp .env.temp .env.local && nano .env.local
# ================================================================================

# ================================================================================
# APPLICATION SECURITY
# ================================================================================
# SECURITY_ENABLED: Set to 'false' for testing, 'true' for production
SECURITY_ENABLED=true

# App Login Credentials (CHANGE THESE IN PRODUCTION!)
APP_USERNAME=admin
APP_PASSWORD=change_me_immediately

# Password expires after this many logins (0 = never expires)
# After expiry, user must update password in .env.local
APP_LOGIN_MAX_USES=10

# Session secret key (CHANGE THIS IN PRODUCTION!)
APP_SECRET_KEY=generate-a-random-key-here

# Session timeout in seconds (3600 = 1 hour)
APP_SESSION_TIMEOUT=3600

# ================================================================================
# ACCESS CONTROL - IP Addresses Allowed to Access This Application
# ================================================================================
# LOCALHOST_ONLY: When true, only localhost (127.0.0.1) can access the app
# When false, ALLOWED_HOSTS controls which IPs can access
LOCALHOST_ONLY=false

# ALLOWED_HOSTS: Comma-separated list of IP addresses/hostnames allowed to access
# These IPs will automatically be added to CORS origins for both ports 9050 & 9051
# Add your VM IP, remote hosts, or network ranges as needed
# Examples: 127.0.0.1,localhost,192.168.1.100,172.16.39.173
ALLOWED_HOSTS=127.0.0.1,localhost

# ================================================================================
# ROUTER CREDENTIALS (used for ALL network devices)
# ================================================================================
ROUTER_USERNAME=cisco
ROUTER_PASSWORD=your_router_password_here

# ================================================================================
# SSH JUMPHOST / BASTION HOST CONFIGURATION
# ================================================================================
# These settings are pre-populated in the Automation page on FIRST app startup ONLY.
# Once jumphost_config.json exists, these values are NOT used (UI changes persist).
# To reset: delete backend/jumphost_config.json and restart the app.
#
# NOTE: Routers use the SAME credentials as the jumphost (cisco/cisco by default)
JUMPHOST_ENABLED=false
JUMPHOST_HOST=
JUMPHOST_PORT=22
JUMPHOST_USERNAME=cisco
JUMPHOST_PASSWORD=cisco

# ================================================================================
# AUDIT LOGGING
# ================================================================================
# Enable detailed audit logging (device connections, commands, jumphost)
# Set to 'false' to disable audit trail logging
AUDIT_LOGGING_ENABLED=true

# Log file path (relative to backend directory)
AUDIT_LOG_FILE=logs/audit.log

# ================================================================================
# API KEYS (Optional)
# ================================================================================
FOR_SEARCH_API_FUTURE_KEY=PLACEHOLDER_API_KEY

# ================================================================================
# END OF CONFIGURATION
# ================================================================================
